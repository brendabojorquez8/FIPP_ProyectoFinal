<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_yellow_inicio"
    tools:context=".Recuperacion">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_back_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/boton_back"
                android:background="#00FFFFFF"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                />

    <ImageView
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:src="@drawable/logoblancobienvenida" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Recuperar contraseña"
        android:textSize="25sp"
        android:fontFamily="@font/objectsans_heavy"
        android:layout_gravity="center"
        android:textColor="@color/white"
        />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="30dp"
                android:text="Correo electrónico"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:fontFamily="@font/objectsans_heavy"/>

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/et_email_recupe"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="30dp"
                android:ems="10"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingLeft="15dp"
                android:fontFamily="@font/objectsans_regular"
                android:hint="Ingrese su correo electrónico"
                android:textColorHint="@color/gray_hint"
                android:inputType="textPersonName"
                android:background="@drawable/round_button"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_nexto"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_gravity="center"
                android:layout_marginTop="85dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/boton_next_b"
                android:textColor="@color/white"
                />
        </LinearLayout>

</LinearLayout>

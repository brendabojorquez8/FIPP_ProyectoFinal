<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Perfil"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_weight="2"
            >

            <ImageButton
                android:id="@+id/btn_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_minibutton"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¡Hola, Ana!"
                android:fontFamily="@font/objectsans_heavy"
                android:textSize="20sp"
                android:textColor="@color/bienvenidas_title"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            >

            <ImageButton
                android:id="@+id/btn_personalizar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/personalizar"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:paddingEnd="10dp"
                />
            <ImageButton
                android:id="@+id/btn_config"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/configura"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                />


        </TableRow>



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


    <ImageButton
        android:layout_gravity="center"
        android:id="@+id/img_userphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/perfil_photo"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/tv_nombre_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:text="Nombre Completo"
        android:fontFamily="@font/objectsans_heavy"
        android:textColor="@color/bienvenidas_title"
        android:textSize="20sp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Nivel de experiencia"
            android:textColor="@color/orange_relleno"
            android:textSize="15sp"
            android:fontFamily="@font/objectsans_heavy"/>

        <TextView
            android:id="@+id/tv_leveluser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LVL.0"
            android:textSize="15sp"
            android:fontFamily="@font/objectsans_heavy"
            android:layout_marginRight="45dp"
            android:textAlignment="textEnd"
            android:textColor="@color/gray_otro"/>

    </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/editTextUsername"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:paddingLeft="15dp"
                    android:fontFamily="@font/objectsans_regular"
                    android:hint="RANGO ALCANCÍA - 0%"
                    android:textColorHint="@color/gray_hint"
                    android:inputType="textPersonName"
                    android:background="@drawable/round_button"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Insignias y logros"
                    android:textColor="@color/orange_relleno"
                    android:textSize="15sp"
                    android:fontFamily="@font/objectsans_heavy"/>

                <TextView
                    android:id="@+id/tv_insignias_cantidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    android:fontFamily="@font/objectsans_heavy"
                    android:layout_marginRight="45dp"
                    android:textColor="@color/gray_otro"/>

            </TableRow>





            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="left"
                android:id="@+id/row3"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp">

                <RadioButton
                    android:id="@+id/btn_meta1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/locked"

                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:button="@android:color/transparent"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

                <RadioButton
                    android:id="@+id/btn_meta2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/locked"

                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:button="@android:color/transparent"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <RadioButton
                    android:id="@+id/btn_meta3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    android:background="@drawable/locked"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:button="@android:color/transparent"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <RadioButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    android:background="@drawable/locked"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:button="@android:color/transparent"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <RadioButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    android:background="@drawable/locked"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:button="@android:color/transparent"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

                <RadioButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/locked"

                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:button="@android:color/transparent"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <RadioButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/add"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:button="@android:color/transparent"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

            </RadioGroup>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Mis metas"
                    android:textColor="@color/orange_relleno"
                    android:textSize="15sp"
                    android:fontFamily="@font/objectsans_heavy"/>

                <TextView
                    android:id="@+id/tv_cantidad_metas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    android:fontFamily="@font/objectsans_heavy"
                    android:layout_marginRight="45dp"
                    android:textColor="@color/gray_otro"/>

            </TableRow>


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="left"
                android:id="@+id/row3"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp">

                <RadioButton
                    android:id="@+id/btn_meta1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/casita"

                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:button="@android:color/transparent"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

                <RadioButton
                    android:id="@+id/btn_meta2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/add"

                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:button="@android:color/transparent"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <RadioButton
                    android:id="@+id/btn_meta3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    android:background="@drawable/add"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:button="@android:color/transparent"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <RadioButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    android:background="@drawable/add"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:button="@android:color/transparent"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <RadioButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    android:background="@drawable/add"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:button="@android:color/transparent"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

                <RadioButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/add"

                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:button="@android:color/transparent"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <RadioButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/add"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:button="@android:color/transparent"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

            </RadioGroup>





            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Palabras aprendidas"
                    android:textColor="@color/orange_relleno"
                    android:textSize="15sp"
                    android:fontFamily="@font/objectsans_heavy"/>

                <TextView
                    android:id="@+id/tv_cantidad_palabras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="15sp"
                    android:fontFamily="@font/objectsans_heavy"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="45dp"
                    android:textColor="@color/gray_otro"/>

            </TableRow>

            <SearchView
                android:id="@+id/btn_buscador"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/round_button3"
                android:layoutDirection="rtl"
                android:searchIcon="@drawable/lupa"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20dp"
                android:text="Sube de nivel"
                android:textColor="@color/orange_relleno"
                android:textSize="15sp"
                android:fontFamily="@font/objectsans_heavy"/>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnIngresar"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ingresar"
                    android:text="      Ingresar"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/objectsans_regular"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnEgresar"
                    android:layout_width="129dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/egresar"
                    android:text="        Egresar"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/objectsans_regular"
                    />
            </TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sena_pro"
                android:layout_width="201dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:background="@drawable/sena_pro"
                android:text="Sena PRO"
                android:fontFamily="@font/objectsans_heavy"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                />


        </LinearLayout>
   </ScrollView>

</LinearLayout>